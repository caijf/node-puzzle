{
  "name": "node-puzzle",
  "version": "0.0.0",
  "description": "Node.js 生成滑块验证码的拼图和背景图。",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "jest",
    "demo:basic": "ts-node examples/basic",
    "demo:remote": "ts-node examples/remote",
    "demo:unequal": "ts-node examples/unequal",
    "demo:size": "ts-node examples/size",
    "demo:coord": "ts-node examples/coord",
    "demo:export": "ts-node examples/export",
    "build": "npm run build:es && npm run build:cjs && npm run build:types",
    "build:es": "rm -rf dist/es && tsc --outDir dist/es -p tsconfig.build.json -m esnext",
    "build:cjs": "rm -rf dist/cjs && tsc --outDir dist/cjs -p tsconfig.build.json",
    "build:types": "rm -rf dist/types && tsc --outDir dist/types -p tsconfig.build.json -d --emitDeclarationOnly",
    "lint": "eslint --ext .js,.mjs,.jsx,.ts,.tsx src",
    "lint:fix": "npm run lint:js -- --fix",
    "prettier": "prettier --write **/*",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run build"
  },
  "files": [
    "dist",
    "docs"
  ],
  "lint-staged": {
    "**/*.{js,mjs,jsx,ts,tsx}": "eslint",
    "**/*.{css,scss,less,js,mjs,jsx,ts,tsx,json,md}": "prettier -w"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "caijf",
  "license": "MIT",
  "engines": {
    "node": ">=14.19.0"
  },
  "dependencies": {
    "image-size": "^1.0.2",
    "pureimage": "^0.4.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}